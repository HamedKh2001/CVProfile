@model DataLayer.Entities.Skill
@{
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">افزودن توانایی جدید</h3>
    </div>
    <form role="form" method="post" asp-area="Admin" asp-controller="Skill" asp-action="Create">
        <div class="box-body">

            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group col-md-6">
                <label asp-for="PercentOfDominance"></label>
                <input asp-for="PercentOfDominance" class="form-control" />
                <span asp-validation-for="PercentOfDominance" class="text-danger"></span>
            </div>

        </div>
        <div style="position:center" class="box-footer">
            <button type="submit" class="btn btn-success btn-lg" style="min-width:150px">ثــبــت</button>
        </div>
    </form>
</div>