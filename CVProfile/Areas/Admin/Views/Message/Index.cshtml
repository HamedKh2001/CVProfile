@model List<DataLayer.Entities.Contact>
@{
    @using CoreLayer.Utilities;
    ViewData["title"] = "پـیـام هـا";
    int index = 1;
}

<!-- Modal -->
<div class="modal fade" id="MyModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="ModalBody" class="modal-body">

            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">
        <div class="box">
            <div class="box-header">
                <div class="col-md-11" style="text-align:center;">
                <h2 class="box-title alert alert-success"> <span style="text-align:center">@ViewData["title"]</span> </h2>
                </div>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="جستجو">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-striped table-hover">
                    <tbody>
                        <tr>
                            <th>شماره</th>
                            <th>مـوضـوع</th>
                            <th>کاربر</th>
                            <th>تاریـخ</th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@item.Subject</td>
                                <td>@item.User.FullName</td>
                                <td>@item.CreationDate.ToShamsi()</td>

                                <td>
                                <a href="/admin/Message/DisplayMessage/@item.Id">بیشتر...</a>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

@section Scripts
{
    <script>
        function Delbtn(id) {
            console.log("Start");
            $.ajax({
                type: "Get",
                url: "/Admin/skill/Delete/" + id,
                success: function (response) {
                    $('#ModalBody').html(response);
                }
            });
            $('#MyModal').modal();
        }

        function Editbtn(id) {
            console.log("Start");
            $.ajax({
                type: "Get",
                url: "/Admin/skill/Edit/" + id,
                success: function (response) {
                    $('#ModalBody').html(response);
                }
            });
            $('#MyModal').modal();
        }
    </script>
}